<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewTravel">

    <LinearLayout
        android:id="@+id/NT_layoutVerticalePrincipale"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/NT_craViaggioTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/title_creaViaggio"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/NT_layoutAndataRitorno"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/NT_radioButtonAR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/AR" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/NT_layoutAndata"
            android:layout_width="match_parent"
            android:layout_height="616dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/NT_TestoAndata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/NT_andata"
                android:textSize="20sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="13dp" />

            <LinearLayout
                android:id="@+id/NT_layoutDateAndataP"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/NT_sceltaAndataP"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/NT_selPartenza"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/NT_partenzaAndata"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/NT_partenza" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/NT_andataDa"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:minHeight="48dp"
                    android:text="@string/NT_da"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/NT_layoutDateAndataA"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/NT_sceltaAndataR"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/NT_selArrivo"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/NT_arrivoAndata"
                    android:layout_width="112dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/NT_arrivo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/NT_andataA"
                    android:layout_width="wrap_content"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="@string/NT_a"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>